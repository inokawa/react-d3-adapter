{
  "name": "react-use-d3",
  "version": "0.0.8",
  "description": "A small React hook to use D3 in declarative way, for data visualization & flexible animation.",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rollup -c",
    "tsc": "tsc -p . --noEmit",
    "tsc:d": "tsc -p . --outDir lib -d --emitDeclarationOnly",
    "prepublishOnly": "rimraf lib && npm run build && npm run tsc:d",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "d3": "^4.0.0",
    "react": "^16.8.0"
  },
  "dependencies": {
    "query-selector": "2.0.0",
    "style-attr": "1.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.13.10",
    "@rollup/plugin-typescript": "8.2.1",
    "@storybook/react": "6.1.21",
    "@types/d3": "6.3.0",
    "@types/react": "17.0.3",
    "babel-loader": "8.2.2",
    "d3": "6.6.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-is": "17.0.1",
    "rimraf": "^3.0.2",
    "rollup": "2.45.2",
    "tslib": "2.2.0",
    "typescript": "4.2.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inokawa/react-use-d3.git"
  },
  "keywords": [
    "react",
    "d3",
    "hooks",
    "visualization",
    "animation",
    "svg",
    "css",
    "transition"
  ],
  "author": "inokawa <stratoooo-taster@yahoo.co.jp> (https://github.com/inokawa/)",
  "license": "MIT",
